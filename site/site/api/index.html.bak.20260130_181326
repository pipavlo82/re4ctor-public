              <input id="api-key" type="text" value="demo" autocomplete="off">
            </div>
            <div>
              <label for="n-words">n (32-bit words)</label>
              <input id="n-words" type="number" min="1" max="1024" value="4">
            </div>
            <div>
              <label for="fmt">Format</label>
              <select id="fmt">
                <option value="hex">hex</option>
