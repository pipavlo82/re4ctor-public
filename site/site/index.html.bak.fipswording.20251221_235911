  // ---------- API Playground ----------
  async function callEndpoint(pathTemplate) {
    const baseInput = document.getElementById("pg-base-url");
    const apiKeyInput = document.getElementById("pg-api-key");
    const nInput = document.getElementById("pg-n");
    const out = document.getElementById("pg-output");
    const status = document.getElementById("pg-status");

    const base = (baseInput.value || "https://api.re4ctor.com").replace(/\/+$/, "");
    const apiKey = apiKeyInput.value || "demo";
    const n = nInput.value || "4";

    const url = base + pathTemplate.replace("{n}", encodeURIComponent(n));

    out.textContent = "Requesting " + url + " ...";
    status.textContent = "";

    try {
      const res = await fetch(url, {
        method: "GET",
        headers: { "X-API-Key": apiKey }
      });

      const text = await res.text();
      let parsed = text;
      try {
        parsed = JSON.parse(text);
      } catch (_) {
        /* keep plain text */
      }
      out.textContent = typeof parsed === "string"
        ? parsed
        : JSON.stringify(parsed, null, 2);
      status.textContent = "HTTP " + res.status + " ‚Ä¢ " + new Date().toISOString();
    } catch (err) {
      out.textContent = "Request failed: " + String(err);
      status.textContent = "Network error or CORS block in browser.";
    }
  }

  document.getElementById("btn-call-random")
    .addEventListener("click", () => callEndpoint("/v1/random?n={n}&fmt=hex"));

  document.getElementById("btn-call-vrf")
    .addEventListener("click", () => callEndpoint("/v1/vrf?sig=ecdsa"));

  // ---------- Scroll reveal ----------
  const observer = new IntersectionObserver(
    entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = "1";
          entry.target.style.transform = "translateY(0)";
        }
      });
    },
    { threshold: 0.12, rootMargin: "0px 0px -80px 0px" }
  );

  document.querySelectorAll(
    ".feature-card, .stat-card, .price-card, .use-card, .trans-card, .comp-card, .cta-panel"
  ).forEach(el => {
    el.style.opacity = "0";
    el.style.transform = "translateY(30px)";
    el.style.transition = "opacity 0.6s ease, transform 0.6s ease";
    observer.observe(el);
  });
</script>

<script>
async function buyPlan(priceId) {
    try {
        const res = await fetch("https://api.re4ctor.com/v1/stripe/checkout", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
                "X-API-Key": "demo"
            },
            body: JSON.stringify({ price_id: priceId })
        });

        const data = await res.json();

        if (data.checkout_url) {
            window.location.href = data.checkout_url;
        } else {
            alert("Stripe error: " + JSON.stringify(data));
        }
    } catch (err) {
        alert("Request failed: " + err);
    }
}
</script>


